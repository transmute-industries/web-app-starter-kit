{
  "name": "web-app-starter-kit",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://transmute-industries.github.io/web-app-starter-kit/",
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "classnames": "^2.2.5",
    "history": "^4.6.3",
    "lodash": "^4.17.4",
    "material-ui": "^0.18.6",
    "material-ui-datatables": "^0.18.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-flexbox-grid": "^1.1.3",
    "react-particles-js": "^1.5.0",
    "react-redux": "^5.0.5",
    "react-router-redux": "^5.0.0-alpha.6",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.7.1",
    "redux-form": "^7.0.0",
    "redux-form-material-ui": "^4.2.0",
    "redux-thunk": "^2.2.0",
    "transmute-framework": "^0.1.38",
    "uport-connect": "^0.6.4"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.0",
    "@types/enzyme": "^2.8.2",
    "@types/history": "^4.6.0",
    "@types/jest": "^20.0.2",
    "@types/lodash": "^4.14.68",
    "@types/material-ui": "^0.17.16",
    "@types/node": "^8.0.10",
    "@types/react": "^15.0.37",
    "@types/react-dom": "^15.5.1",
    "@types/react-redux": "^4.4.46",
    "@types/react-router": "^4.0.14",
    "@types/react-router-redux": "^5.0.3",
    "@types/react-tap-event-plugin": "0.0.30",
    "coveralls": "^2.13.1",
    "enzyme": "^2.9.1",
    "gh-pages": "^1.0.0",
    "pm2": "^2.5.0",
    "react-scripts-ts": "^2.3.2",
    "react-test-renderer": "^15.6.1",
    "redux-devtools-extension": "^2.13.2",
    "truffle": "^3.4.4"
  },
  "scripts": {
    "clean": "rm -rf build coverage",
    "docker:build": "docker-compose up --build",
    "docker:start": "truffle migrate && npm run move-contracts && npm run start",
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build && npm run prep-for-github",
    "prep-for-github": "cp build/index.html build/404.html",
    "test": "react-scripts-ts test --env=jsdom --coverage",
    "eject": "react-scripts-ts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "transmute": "node ./node_modules/transmute-framework/build/cli/index.js",
    "test:all": "npm run test && truffle test",
    "testrpc": "pm2 start testrpc",
    "report-coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "move-contracts": "rm -rf src/contracts && mv build/contracts src/contracts",
    "migrate": "npm run transmute migrate && npm run move-contracts",
    "ipfs:allow": "ipfs config --json API.HTTPHeaders.Access-Control-Allow-Origin '[\"http://localhost:3000\"]'",
    "ipfs": "npm run ipfs:allow && ipfs daemon"
  }
}
